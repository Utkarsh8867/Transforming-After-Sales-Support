# Server Configuration
PORT=5000
NODE_ENV=development
SERVER_HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-customer-service
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=7d

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
# Additional frontend URLs (comma-separated for multiple deployments)
ADDITIONAL_FRONTEND_URLS=https://your-app.onrender.com,https://your-app.netlify.app,https://your-app.vercel.app

# Email Configuration (optional - app will work without email)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100